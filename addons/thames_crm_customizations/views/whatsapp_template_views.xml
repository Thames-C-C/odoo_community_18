<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for WhatsApp Templates (Forced Creation via Inheritance) -->
    <record id="view_whatsapp_template_tree_forced" model="ir.ui.view">
        <field name="name">whatsapp.template.tree.forced</field>
        <field name="model">whatsapp.template</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="." position="replace">
                <list>
                    <field name="name"/>
                    <field name="category"/>
                    <field name="language"/>
                    <field name="status"/>
                </list>
            </xpath>
        </field>
    </record>

    <!-- Form View for WhatsApp Templates -->
    <record id="view_whatsapp_template_form" model="ir.ui.view">
        <field name="name">whatsapp.template.form</field>
        <field name="model">whatsapp.template</field>
        <field name="arch" type="xml">
            <form string="WhatsApp Template">
                <header>
                    <button name="action_sync_templates_from_meta" string="Sync from Meta" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="language"/>
                        <field name="status"/>
                        <field name="category"/>
                    </group>
                    <group string="Body">
                        <field name="body_text" nolabel="1"/>
                    </group>
                    <group string="Components (Technical)">
                        <field name="components_json" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for WhatsApp Templates -->
    <record id="action_whatsapp_template" model="ir.actions.act_window">
        <field name="name">WhatsApp Templates</field>
        <field name="res_model">whatsapp.template</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item for WhatsApp Templates under Settings -->
    <menuitem 
        id="menu_whatsapp_template" 
        name="WhatsApp Templates" 
        parent="base.menu_administration" 
        action="action_whatsapp_template" 
        sequence="50"/>
</odoo>