<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_thames_v3" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.thames.financial</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Financial Data" name="financial_data">
                    <group>
                        <group string="Financial Limits">
                            <field name="x_cheque_limit"/>
                            <field name="x_credit_limit"/>
                            <field name="x_security_cheque_amount"/>
                            <field name="x_bank_guarantee_amount"/>
                        </group>
                        <group string="Account Balance">
                            <field name="x_credit_balance"/>
                            <field name="x_due_invoices_amount"/>
                            <field name="x_overdue_invoices_amount"/>
                            <field name="x_total_exposure" decoration-danger="1"/>
                        </group>
                        <group string="Classification &amp; History">
                            <field name="x_customer_classification"/>
                            <field name="x_customer_since"/>
                            <field name="x_last_activity_date"/>
                            <field name="x_business_segment"/>
                        </group>
                        <group string="Contact &amp; Delivery">
                            <field name="x_primary_contact_person"/>
                            <field name="x_secondary_contact_person"/>
                            <field name="x_delivery_route_code"/>
                             <field name="x_preferred_communication"/>
                        </group>
                         <group string="Tax Information">
                            <field name="x_is_tax_exempt"/>
                            <field name="x_tax_exemption_number" attrs="{'invisible': [('x_is_tax_exempt', '=', False)]}"/>
                        </group>
                    </group>
                    <group string="Notes">
                         <field name="x_customer_notes" nolabel="1"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>